<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table>
  <thead>
    <tr>
	  <th>Id</th>
      <th>Name</th>
	  <th>Cinemas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.id %></td>
        <td><%= film.name %></td>
		<% film.cinamas_films.each do |cinema| %>
        	<td><%= @cinemas.find(cinema.cinema_id).location %></td>
		<% end %>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film', new_film_path %><br>
<%= link_to 'Add Cinema To Films', new_cinamas_film_path %>
